---
import HeaderLayout from "../components/layout/Header.astro";
import FooterLayout from "../components/layout/Footer.astro";
import './src/styles/global.css';
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portal Noticias</title>
	</head>
	<body class="bg-gris-claro">
		<HeaderLayout />
		<main class="container mx-auto">
			<slot />
		</main>
		<FooterLayout style="width: 100%;"/>
	</body>
</html>

<style>
	html,
	body {
		margin: 0 auto;
		width: 100%;
		height: 100%;
	}

	main {
		width: 1040px;
	}
</style>
